pipeline {
    agent any

    environment {
        NETLIFY_BUILD_HOOK = credentials('NETLIFY_BUILD_HOOK')
    }

    stages {
        stage('Build') {
            agent {
                docker {
                    image "node:20-alpine"
                    args '-t'
                    // Removed 'reuseNode true' to prevent file permission conflicts.
                }
            }
    
            steps {
                script {
                    dir('02_react_jenkins_app') {
                        sh '''
                        echo "Starting the Build process"
                        npm --version
                        node --version
    
                        # This is the new command to set the npm cache to a local, writable directory.
                        # It solves the EACCES (permission denied) error.
                        npm config set cache .npm-cache --location=project
    
                        echo "Listing files before node packages install"
                        ls -la
    
                        # Clean the local cache and remove node_modules to ensure a fresh install
                        npm cache clean --force
                        rm -rf node_modules
    
                        ls -la
    
                        echo "Started node packages install"
                        npm install
    
                        echo "Starting the build..."

                        npm run build

                        echo "Build completed"
                        ls -la

                        
                        '''
                    }
                }
            }
        }

        stage('Test') {
            agent {
                docker {
                    image "node:20-alpine"
                    args '-t'
                    // Removed 'reuseNode true' to prevent file permission conflicts.
                }
            }

            steps {
                script {
                    dir('02_react_jenkins_app') {
                        sh '''
                            echo "Checking Build..."
                            test -f dist/index.html

                            echo "Starting tests..."
                            npm run test
                        '''
                    }
                }
            }
        }

        stage('Deploy') {
            steps {
                script {
                    dir('02_react_jenkins_app') {
                        sh '''
                            echo "Starting the deployment process..."
                            STATUS=$(curl -X POST -s -o /dev/null -w "%{http_code}" "$NETLIFY_BUILD_HOOK")

                            if [ "$STATUS" -ne 200 ]; then
                                echo "Deployement failed with status code:: $STATUS"
                                exit 1
                            fi

                            echo "Deployment Success"
                        '''
                    }
                }
            }
        }
    }
    
    post {
        always {
            script {
                dir('02_react_jenkins_app') {
                    junit 'test-results/junit.xml'
                }
            }
            echo "Pipeline finished!"
        }
    }

}
